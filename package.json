{
  "name": "vue-layout-factory",
  "version": "0.1.0",
  "description": "Json schema based layouts in Vue",
  "author": "Ben Mercer",
  "main": "dist/vue-layout-factory.common.js",
  "module": "dist/vue-layout-factory.esm.js",
  "browser": "dist/vue-layout-factory.js",
  "unpkg": "dist/vue-layout-factory.js",
  "files": [
